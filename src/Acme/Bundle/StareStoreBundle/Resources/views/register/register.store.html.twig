    <div id="content">  
        <div class="breadcrumb">
            <a href="#">Home</a>
            &raquo; <a href="#">Cuenta</a>
            &raquo; <a href="#">Registro</a>
        </div>
        <h1>Registro de tienda</h1>
        <form action="{{base_url}}/register/store" method="post" enctype="multipart/form-data">
            <h2>Datos de la Tienda</h2>
            <div class="content">
                <table class="form">
                    <tr>
                        <td><span class="required">*</span> Nombre:</td>
                        <td><input type="text" name="nombre" value="" />
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Eslogan:</td>
                        <td><input type="text" name="eslogan" value="" />
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Mision:</td>
                        <td><textarea type="" name="mision" value=""></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Vision:</td>
                        <td><textarea type="" name="vision" value=""></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Informacion:</td>
                        <td><textarea type="" name="acercade" value=""></textarea>
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Tipo:</td>
                        <td><input type="radio" name="tipo" value="1">Kiosco
                            <input type="radio" name="tipo" value="2">Tienda
                        </td>
                    </tr>
                </table>
            </div>
            <h2>Imagenes</h2>
            <div class="content">
                <table class="form">
                    <tr>
                        <td><span class="required">*</span> Logo:</td>
                        <td><input type="file" name="logo" id="logo" multiple/>
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Portada:</td>
                        <td><input type="file" name="portada" multiple/>
                        </td>
                    </tr>
                </table>
            </div>
            <h2>Administracion</h2>
            <div class="content">
                <table class="form">
                    <tr>
                        <td><span class="required">*</span> Administrador:</td>
                        <td>
                            {{render(controller('AcmeBundleStareStoreBundle:Category:owners'))}}
                        </td>
                    </tr>
                    <tr>
                        <td><span class="required">*</span> Categoria:</td>
                        <td>
                            {{render(controller('AcmeBundleStareStoreBundle:Category:categories'))}}
                        </td>
                    </tr>
                </table>
            </div>
            <div class="buttons">
                <div class="right">
                    <input type="submit" value="Continuar" class="button" />
                </div>
            </div>
        </form>
    </div>    
    
</div>
